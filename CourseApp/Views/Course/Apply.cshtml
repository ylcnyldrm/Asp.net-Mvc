@model StudentResponse
 
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <link href="/modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/style.css" rel="stylesheet" />
        <title>APPLY</title>
    </head>
<body>



    <div class="container m-4">
        <div class="card mx-auto" style="width:900px;">
            <div class="card-header">
                Başvuru Formu 
                <div class="card-body">  </div>
                    <form asp-action="apply" method="POST">
                        <div asp-validation-summary="All"> </div>
                        <div class="form-group">
                            <label asp-for="Name">Adınız</label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Eposta</label>
                            <input asp-for="Email"  class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone">Telefon</label>
                            <input asp-for="Phone"  class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Confirm">Kursa Katılacak mısınız ?</label>
                            <select asp-for="Confirm"class="form-control" >
                                <option value=""> Seçiniz  </option>
                                <option value="true">Evet, geliyorum</option>
                                <option value="false">Hayır, Katılmyorum</option>
                            </select>
                        </div> 
                            <input type="submit" name="Submit" class="btn btn-primary btn-block">
                         
                    </form>
                </div>
           
        </div>
    </div>
     
</body>
</html>