@model Student
 
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>APPLY</title>
</head>
<body>
     
    <form asp-action="apply" method="POST">
        <div asp-validation-summary="All"> </div>

        <p>
            <label asp-for="Name" >Adınız</label>
            <input asp-for="Name" />
        </p>
        <p>
            <label asp-for="Email">Eposta</label>
            <input asp-for="Email" />
        </p>
        <p>
            <label asp-for="Phone"  >Telefon</label>
            <input asp-for="Phone" />
        </p>
        <p>
            <label  asp-for="Confirm" >Kursa Katılacak mısınız ?</label>
            <select asp-for="Confirm">
                <option value=""> Seçiniz </option>
                <option value="true">Evet, geliyorum</option>
                <option value="false">Hayır, Katılmyorum</option>
            </select>

        </p>
        <input type="submit" name="Submit" />


    </form>
</body>
</html>